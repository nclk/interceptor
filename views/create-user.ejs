<% include ./partials/header %>
<div class="container">
    <h1>Create User</h1>

    <div class="container create-user-form">
        <form action="/admin/create-user" method="POST">
            <div class="form-group">
                <label for="username">User Name</label>
                <input class="form-control" type="text" placeholder="username" name="username" id="username">
            </div>
            <div class="form-group">
                <label for="password">Password </label>
                <input class="form-control" type="password" placeholder="password" name="password" id="password">
                
            </div>

            <div class="form-group">
                <label for="confirm">Confirm Password </label>
                <input class="form-control" type="password" placeholder="confirm password" name="confirm" id="confirm">
                <span id="message"></span>
                
            </div>
            <button class="btn btn-primary" type="submit" value="Submit" id="submit">Submit</button>
        </form>
    </div>

    <div class="container">
        <ul class="list-group">
            <li class="list-group-item"><a href="/admin/logout">Logout</a></li>
        </ul>
    </div>


</div>



<% include ./partials/footer %>
